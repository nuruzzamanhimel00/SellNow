# Environment Configuration
# Copy this file to .env and update with your values

# Application
APP_NAME=SellNow
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database
DB_CONNECTION=sqlite
DB_PATH=database/database.sqlite

# For MySQL (if switching from SQLite)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=sellnow
# DB_USERNAME=root
# DB_PASSWORD=

# Security
APP_KEY=
SESSION_LIFETIME=120

# Payment Gateways
STRIPE_API_KEY=
STRIPE_SECRET_KEY=

PAYPAL_CLIENT_ID=
PAYPAL_SECRET=

RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_FILE_TYPES=pdf,zip,rar,doc,docx
