{% extends "layouts/base.html.twig" %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Products</h2>
    <a href="/products/add" class="btn btn-primary">Add New Product</a>
</div>

{% if products|length > 0 %}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                <tr>
                    <td>
                        {% if product.image_path %}
                            <img src="/{{ product.image_path }}" alt="{{ product.title }}" style="width: 50px; height: 50px; object-fit: cover;">
                        {% else %}
                            <div style="width: 50px; height: 50px; background: #ddd; display: flex; align-items: center; justify-content: center;">
                                <small>No Image</small>
                            </div>
                        {% endif %}
                    </td>
                    <td>{{ product.title }}</td>
                    <td>${{ product.price }}</td>
                    <td>
                        {% if product.is_active %}
                            <span class="badge bg-success">Active</span>
                        {% else %}
                            <span class="badge bg-secondary">Inactive</span>
                        {% endif %}
                    </td>
                    <td>{{ product.created_at|date("M d, Y") }}</td>
                    <td>
                        <a href="/products/edit?id={{ product.product_id }}" class="btn btn-sm btn-warning">Edit</a>
                        <form method="POST" action="/products/delete" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                            {{ csrf_field()|raw }}
                            <input type="hidden" name="product_id" value="{{ product.product_id }}">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <div class="alert alert-info">
        <p class="mb-0">You haven't added any products yet. <a href="/products/add">Create your first product</a>!</p>
    </div>
{% endif %}

<div class="mt-3">
    <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
</div>
{% endblock %}
